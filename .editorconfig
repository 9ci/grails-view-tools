root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.coffee]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
tab_width = 2

[*.html]
indent_style = tab
tab_width = 4

[*.groovy]
indent_style = tab
tab_width = 4

[*.gsp]
indent_style = tab
tab_width = 4

[*.md]
trim_trailing_whitespace = false
